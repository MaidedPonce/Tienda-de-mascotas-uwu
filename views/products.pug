extends layout.pug

block hero
    section.hero.is-dark.is-bold
        .hero-body
            .container
                h1.title Tienda Online de mascotas
                h2.subtitle Encuentra los mejores productos para la vida de tu mejor amigo ❤

block content
    .container(style="flex: 1; padding: 50px 0;")
        .columns.is-multiline
            each product in products
                .column.is-one-quarter
                    .card
                        .card-image
                            figure.image(style="height: 190px")
                                img(src=product.image style="height: 100%; object-fit: cover")
                        .card-content
                            h1.title= product.name
                            .button.is-fullwidth.is-primary(style="color: black")
                                span.icon
                                    i.fas.fa-shopping-cart
                                span Añadir al carrito     
                                strong=`${product.precio} MX`